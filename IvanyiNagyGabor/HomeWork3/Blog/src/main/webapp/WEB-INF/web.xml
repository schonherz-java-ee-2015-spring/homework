<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>Archetype Created Web Application</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>

		
	</welcome-file-list>
	<servlet>
		<servlet-name>GetAllBlogServlet</servlet-name>
		<servlet-class>hu.schonherz.homework.servlet.GetAllBlogServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateBlogServlet</servlet-name>
		<servlet-class>hu.schonherz.homework.servlet.CreateBlogServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DetailsBlogServlet</servlet-name>
		<servlet-class>hu.schonherz.homework.servlet.DetailsBlogServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetAllBlogServlet</servlet-name>
		<url-pattern>/GetAllBlogServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateBlogServlet</servlet-name>
		<url-pattern>/CreateBlogServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DetailsBlogServlet</servlet-name>
		<url-pattern>/DetailsBlogServlet</url-pattern>
	</servlet-mapping>
</web-app>