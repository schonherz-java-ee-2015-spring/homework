<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Home Work Blog Site Project</display-name>
  <servlet>
  	<servlet-name>DetailsServlet</servlet-name>
  	<display-name>DetailsServlet</display-name>
  	<description>Servlet for Blog Details</description>
  	<servlet-class>hu.schonherz.java.training.hw.blog.servlet.DetailsServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>NewBlogServlet</servlet-name>
  	<display-name>NewBlogServlet</display-name>
  	<description>New Blog Creator Servlet</description>
  	<servlet-class>hu.schonherz.java.training.hw.blog.servlet.NewBlogServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>DetailsServlet</servlet-name>
  	<url-pattern>/details</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>NewBlogServlet</servlet-name>
  	<url-pattern>/newblog</url-pattern>
  </servlet-mapping>
</web-app>
